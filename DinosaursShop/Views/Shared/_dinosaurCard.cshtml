@model Dinosaur

<div class="col-sm-4 col-ld-4 col-md-4">
    <div class="thumbnail-list">
        <img src="@Url.Content(Model.ImageThumbnailUrl)" alt="image of @Model.Name" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Dinosaur" asp-action="Details"
                   asp-route-id="@Model.DinosaurId">@Model.Name</a>
            </h3>
            <p>@Model.Description</p>
        </div>
    </div>
</div>