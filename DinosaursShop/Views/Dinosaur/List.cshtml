@model DinosaursShop.ViewModels.DinosaurListViewModel

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dinosaurs Shop</title>
</head>
<body>
    <h1>@Model.CurrentCategory.</h1>
    @foreach (var dinosaur in Model.Dinosaurs)
    {
        <div>
            <h2>@dinosaur.Name</h2>
            <h3>@dinosaur.Price.ToString("c")</h3>
            <h4>@dinosaur.Category.CategoryName</h4>
        </div>
    }
</body>
</html>